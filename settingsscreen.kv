<SettingsScreen>:

    FloatLayout:

        Label:
            text: 'Effet sonore'
            color: (0, 0.5, 0, 1)  # Vert
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': .3, 'top': .58}

        Label:
            text: 'Mode sombre'
            color: (0, 0.5, 0, 1)  # Vert
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': .3, 'top': 0.42}



        Switch:
            size_hint: None, None
            size: "100dp", "40dp"
            pos_hint: {'right': .7, 'top': 0.6}
