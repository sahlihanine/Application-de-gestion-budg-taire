            on_active:
                root.toggle_sound()
                root.play_sound()


        Switch:
            size_hint: None, None
            size: "100dp", "40dp"
            pos_hint: {'right': .7, 'top': 0.45}
            active: False
            on_active:
                root.toggle_dark_mode(self.active)
                root.play_sound()




