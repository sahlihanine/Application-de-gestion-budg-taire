<Dépences_courantesScreen>:

    FloatLayout:

        MDIconButton:
            id: button1
            icon: "close"
            pos_hint: {'top': 0.7, 'right': 0.4}
            on_press:
                app.root.get_screen('Settings').play_sound()
                self.md_bg_color = (0, 1, 0, 1) if self.md_bg_color != [0, 1, 0, 1] else [1, 1, 1, 1]



        MDIconButton:
            id: button2
            icon: "close"
            pos_hint: {'top': 0.7, 'right': 0.66}
            on_press:
                app.root.get_screen('Settings').play_sound()
                button2.md_bg_color = (0, 1, 0, 1) if button2.md_bg_color != [0, 1, 0, 1] else [1, 1, 1, 1]

        # Affichage du message d'erreur
        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1  # Rouge
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': .28, 'top': .27}

        Label:
            text: 'Choisis le type de dépenses'
            color: 0.345, 0.635, 0.42, 1   # Vert
            size_hint: None, None
            size: self.texture_size
            pos: (root.width - self.width) / 2, root.height * 0.8 - self.height / 2
            font_size: 25  # Changer la taille du text

        Label:
            text: 'Primaires'
            color: 0.345, 0.635, 0.42, 1   # Vert
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': .32, 'top': .625}
            font_size: 20

        Label:
            text: 'Secondaires'
            color: 0.345, 0.635, 0.42, 1   # Vert
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'x': .6, 'top': .625}
            font_size: 20

        TextInput:
            id: déscription_input
            hint_text: "Entrer une catégorie"
            multiline: True
            size_hint: (0.4, 0.06)
            pos_hint: {'x': .30, 'y': .40}

        TextInput:
            id: montant_input
            hint_text: "Entrer le montant en dinar (en chiffres)"
            multiline: True
            size_hint: (0.4, 0.06)
            pos_hint: {'x': .30, 'y': .30}

        Button:
            text: "Soumettre la transaction"
            size_hint: (0.25, 0.1)
            pos_hint: {'x': 0.38, 'y': 0.1}
            background_color: (0.345, 0.635, 0.42, 1)
            background_normal: ''
            on_release:
                app.root.get_screen('Settings').play_sound()
                app.root.get_screen('Dépences_courantes').check_inputs_and_buttons()




    RelativeLayout:
        size_hint_y: 1
        height: '100dp'  # Taille de l'image

        AsyncImage:
            source: r"C:/Users/hanine/Desktop/travails/icones/icone code/retour2.png"
            size_hint:None , None
            size: 60,60
            pos_hint: {'top': 1, 'left': 0.9}
            on_touch_down: if self.collide_point(*args[1].pos): root.manager.transition.direction = 'right'; root.manager.current = 'Menu';app.root.get_screen('Settings').play_sound()

        Label:
            text: "Dépences courantes"
            font_size: '25sp'
            color: (0.345, 0.635, 0.42, 1)
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'top': 0.95}